<h1><%= @pet.name %></h1>
<h2><%= @pet.species.capitalize %></h2>
<h3><%= @pet.age %></h3>

<%= link_to "Make Appointment for #{@pet.name}", new_pet_appointment_path(@pet.id) %>

<h2>Appoinment</h2>

<ul>
  <% @pet.appointments.each do |appointment| %>
    <li>
    <%= appointment.reason %>
    <%= appointment.doctor.name %>
     <%= appointment.date %>
    </li>
  <% end %>
</ul>
